<?xml version="1.0" encoding="UTF-8" ?>

<process-application
        xmlns="http://www.camunda.org/schema/1.0/ProcessApplication"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <process-archive name="loan-approval">
        <process-engine>default</process-engine>

        <resource>article_creation.bpmn</resource>
        <resource>article_creation.form</resource>
        <resource>article_moderation.form</resource>
        <resource>ad_adding.form</resource>

        <resource>ad_process.bpmn</resource>
        <resource>ad_request.form</resource>
        <resource>ad_moderation.form</resource>

        <properties>
            <property name="isDeleteUponUndeploy">false</property>
            <property name="isScanForProcessDefinitions">true</property>
        </properties>
    </process-archive>

</process-application>